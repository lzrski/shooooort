// Colors
body-bg      = #FCFBFA
light-bg     = #EAEAEA
disabled-bg  = #E0E0E0

primary      = #555555
secondary    = #AAAAAA
unimportant  = #CCCCCC
disabled     = #BFBFBF
accent       = #EB4A42

// Fonts
@import url('https://fonts.googleapis.com/css?family=Montserrat|Roboto:400,300')

body
  max-width    800px
  margin       auto

  background   body-bg
  color        primary

  font-family  'Roboto', sans-serif
  font-weight  light
  font-size    16px

header
  display         flex
  justify-content space-between
  align-items     baseline
  flex-wrap       wrap
  margin          50px 0

  > *
    margin       0

  h1
    font-family  'Montserrat', sans-serif
    font-size    47px
    color        accent
    text-decoration underline

  h2
    color       unimportant
    margin-top  16px

form
  display       flex
  flex-wrap     wrap
  margin        0 -8px

  > *
    padding     18px;
    margin      8px 8px;
    border      none
    border-radius 3px;
    font-size   inherit

  input
    background  light-bg
    flex-grow   10
    // min-width   100%

  button
    background  accent
    color       body-bg
    flex-grow   1

    &:disabled
      background disabled-bg
      color      disabled
