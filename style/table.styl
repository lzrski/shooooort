table
  width             100%
  border-spacing    8px

  th, td
    padding         16px 0

  th
    font-weight     normal
    text-transform  uppercase
    font-size       14px
    text-align      left
    color           secondary

  td a
    display         block

    text-decoration none
    font-weight     normal

    &:focus
      border-left    solid 4px accent
      padding-left   4px
      outline        none

    .shortened
      color           primary

      strong
        color         accent
        font-weight   inherit


    label
      float          right
      padding        0 16px
      color          accent
      font-weight    lighter

      pointer-events none
      opacity        0
      transition     opacity 500ms

    &:hover label
      opacity        1

    .original
      color          unimportant
      clear          both
